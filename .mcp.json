{
  "$schema": "https://schemas.anthropic.com/mcp/v1.0.0/config.json",
  "description": "MCP configuration for Solo Unicorn project management system",
  "mcpServers": {
    "solo-unicorn": {
      "command": "node",
      "args": ["-e", "console.log('Solo Unicorn MCP server accessible via HTTP at localhost:8502')"],
      "env": {
        "SOLO_UNICORN_URL": "http://localhost:8500",
        "AGENT_AUTH_TOKEN": "${AGENT_AUTH_TOKEN}"
      },
      "description": "Solo Unicorn task management and agent coordination via HTTP"
    }
  },
  "mcpHttpServers": {
    "solo-unicorn": {
      "url": "http://localhost:8502/mcp",
      "headers": {
        "Authorization": "Bearer ${AGENT_AUTH_TOKEN}",
        "Content-Type": "application/json"
      },
      "description": "Solo Unicorn task management and agent coordination tools",
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "tools": {
        "task.update": {
          "description": "Update task fields during workflow stages",
          "parameters": {
            "taskId": "uuid (required)",
            "refinedTitle": "string (optional)",
            "refinedDescription": "string (optional)", 
            "plan": "any type (optional)",
            "status": "enum: todo|doing|done (optional)",
            "stage": "enum: refine|kickoff|execute (optional)"
          }
        },
        "agent.rateLimit": {
          "description": "Mark the agent as rate limited with optional resolve time",
          "parameters": {
            "sessionId": "uuid",
            "resolveAt": "datetime"
          },
          "requires": "x-agent-id header"
        },
        "project.memory.update": {
          "description": "Update project memory with learnings and context",
          "parameters": {
            "projectId": "uuid",
            "memory": "string"
          }
        },
        "project.memory.get": {
          "description": "Get project memory and context",
          "parameters": {
            "projectId": "uuid"
          }
        }
      }
    }
  }
}
