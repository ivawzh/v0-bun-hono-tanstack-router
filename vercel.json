{
  "buildCommand": "bun install && bun run build",
  "outputDirectory": "apps/web/dist",
  "installCommand": "curl -fsSL https://bun.sh/install | bash && ~/.bun/bin/bun install",
  "framework": null,
  "functions": {
    "apps/server/dist/index.js": {
      "runtime": "nodejs20.x",
      "includeFiles": "apps/server/src/db/migrations/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/server/dist/index.js"
    },
    {
      "source": "/rpc/(.*)",
      "destination": "/apps/server/dist/index.js"
    },
    {
      "source": "/agent/(.*)",
      "destination": "/apps/server/dist/index.js"
    },
    {
      "source": "/mcp/(.*)",
      "destination": "/apps/server/dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}