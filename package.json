{
  "name": "solo-unicorn",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "db:generate": "bun run --elide-lines 0 --filter server db:generate",
    "db:migrate": "bun run --elide-lines 0 --filter server db:migrate",
    "db:push": "bun run --elide-lines 0 --filter server db:push",
    "db:studio": "bun run --elide-lines 0 --filter server db:studio",
    "dev": "concurrently --prefix '[{name}]' --names 'server,web' --prefix-colors 'cyan,magenta' 'cd apps/server && bun dev' 'cd apps/web && bun dev'",
    "dev:native": "bun run --filter native dev",
    "dev:server": "bun run --filter server dev",
    "dev:web": "bun run --filter web dev",
    "typecheck": "concurrently 'cd apps/server && bun typecheck' 'cd apps/web && bun typecheck'",
    "setup-awscli": "bin/merge-awscli-config.sh",
    "aws-sso": "aws sso login --sso-session=monster-make",
    "sst:prod": "bun sst --stage production",
    "sst:alpha": "bun sst --stage alpha",
    "postinstall": "bun sst install"
  },
  "dependencies": {
		"ts-pattern": "^5.8.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.152",
    "concurrently": "^9.2.1",
    "sst": "3.17.12"
  }
}
