{
  "hooks": {
    "task-pickup": {
      "description": "Called when Claude Code picks up a task from Solo Unicorn",
      "command": "${CLAUDE_HOOKS_DIR}/task-pickup.sh",
      "environment": {
        "TASK_ID": "{{task.id}}",
        "TASK_TITLE": "{{task.title}}",
        "TASK_DESCRIPTION": "{{task.description}}",
        "PROJECT_NAME": "{{task.projectName}}",
        "LOCAL_REPO_PATH": "{{task.localRepoPath}}"
      }
    },
    "task-complete": {
      "description": "Called when Claude Code completes a task",
      "command": "${CLAUDE_HOOKS_DIR}/task-complete.sh",
      "environment": {
        "TASK_ID": "{{task.id}}",
        "SESSION_ID": "{{session.id}}",
        "LOCAL_REPO_PATH": "{{task.localRepoPath}}"
      }
    },
    "task-progress": {
      "description": "Called periodically to report task progress",
      "command": "echo 'Task {{task.id}} progress: {{progress}}%'",
      "interval": 30000
    }
  },
  "integration": {
    "soloUnicorn": {
      "websocketUrl": "ws://localhost:8500/ws/agent",
      "authToken": "${AGENT_AUTH_TOKEN}",
      "autoPickup": true,
      "pollInterval": 10000
    }
  }
}