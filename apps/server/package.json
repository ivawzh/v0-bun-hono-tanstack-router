{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun --hot run src/index.ts",
    "start": "bun run dist/index.js",
    "db:create:dev": "pg-god db-create --databaseName=solo_unicorn_dev --userName=$USER",
    "db:create:test": "pg-god db-create --databaseName=solo_unicorn_test --userName=$USER",
    "db:create": "bun run db:create:dev",
    "db:drop:dev": "pg-god db-drop --databaseName=solo_unicorn_dev --userName=$USER",
    "db:drop:test": "pg-god db-drop --databaseName=solo_unicorn_test --userName=$USER",
    "db:drop": "bun run db:drop:dev",
    "db:push:dev": "NODE_ENV=development drizzle-kit push",
    "db:push:test": "NODE_ENV=test DATABASE_URL=${DATABASE_TEST_URL:-postgresql://$USER@localhost:5432/solo_unicorn_test} drizzle-kit push",
    "db:push:alpha": "NODE_ENV=alpha DATABASE_URL=${DATABASE_ALPHA_URL} drizzle-kit push",
    "db:push:prod": "NODE_ENV=production DATABASE_URL=${DATABASE_PROD_URL} drizzle-kit push",
    "db:push": "bun run db:push:dev",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "NODE_ENV=development drizzle-kit migrate",
    "db:migrate:test": "NODE_ENV=test DATABASE_URL=${DATABASE_TEST_URL:-postgresql://$USER@localhost:5432/solo_unicorn_test} drizzle-kit migrate",
    "db:migrate:alpha": "NODE_ENV=alpha DATABASE_URL=${DATABASE_ALPHA_URL} drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production DATABASE_URL=${DATABASE_PROD_URL} drizzle-kit migrate",
    "db:migrate": "bun run db:migrate:dev",
    "db:migrate:deploy": "node scripts/migrate-deploy.js",
    "postbuild": "node scripts/migrate-deploy.js",
    "migrations:generate": "drizzle-migrations generate --name init",
    "migrations:up": "drizzle-migrations up",
    "migrations:down": "drizzle-migrations down",
    "migrations:status": "drizzle-migrations status",
    "migrations:refresh": "drizzle-migrations refresh",
    "migrations:fresh": "drizzle-migrations fresh",
    "seed:create": "drizzle-migrations seed:create --name seed",
    "seed:run": "drizzle-migrations seed:run"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.3",
    "@electric-sql/pglite": "^0.2.11",
    "@openauthjs/openauth": "^0.4.3",
    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.5.0",
    "ai": "^4.3.16",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.12.2",
    "pg": "^8.14.1",
    "valibot": "^1.1.0",
    "zod": "^4.0.2"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "@drepkovsky/drizzle-migrations": "github:drepkovsky/drizzle-migrations",
    "@types/bun": "^1.2.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2"
  }
}
