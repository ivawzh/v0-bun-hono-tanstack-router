{
  "name": "solo-unicorn-server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
    "typecheck": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "HOT_RELOAD=true bun run --hot src/index.ts",
		"start": "bun run dist/index.js",
    "db:create:dev": "bun pg-god db-create --databaseName=solo_unicorn_dev --userName=$USER",
    "db:create:test": "bun pg-god db-create --databaseName=solo_unicorn_test --userName=$USER",
    "db:drop:dev": "bun pg-god db-drop --databaseName=solo_unicorn_dev --userName=$USER",
    "db:drop:test": "bun pg-god db-drop --databaseName=solo_unicorn_test --userName=$USER",
    "db:create": "bun pg-god db-create --url $(bun --print 'process.env.DATABASE_URL')",
    "db:drop": "bun pg-god db-drop --url $(bun --print 'process.env.DATABASE_URL')",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
    "db:migrate": "bun run db:migrate:up",
		"db:migrate:status": "bun drizzle-migrations status",
    "db:migrate:generate": "bun drizzle-migrations generate",
    "db:migrate:up": "bun drizzle-migrations up",
    "db:migrate:down": "bun drizzle-migrations down",
    "db:migrate:fresh": "bun drizzle-migrations fresh",
    "seed:create": "drizzle-migrations seed:create --name seed",
    "seed:run": "drizzle-migrations seed:run"
	},
	"dependencies": {
		"zod": "^3.23.8",
		"@orpc/server": "^1.8.4",
		"@orpc/client": "^1.8.4",
		"hono": "^4.8.2",
		"drizzle-orm": "^0.44.5",
		"@neondatabase/serverless": "^1.0.1",
		"ws": "^8.18.3",
		"sst": "*"
	},
	"devDependencies": {
    "@drepkovsky/drizzle-migrations": "^0.6.0",
		"tsdown": "^0.14.1",
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"drizzle-kit": "^0.31.4",
		"@types/ws": "^8.18.1",
		"postgres": "^3.4.7"
	}
}
