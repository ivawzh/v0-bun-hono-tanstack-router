{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "migrations:generate": "drizzle-migrations generate --name init",
    "migrations:up": "drizzle-migrations up",
    "migrations:down": "drizzle-migrations down",
    "migrations:status": "drizzle-migrations status",
    "migrations:refresh": "drizzle-migrations refresh",
    "migrations:fresh": "drizzle-migrations fresh",
    "seed:create": "drizzle-migrations seed:create --name seed",
    "seed:run": "drizzle-migrations seed:run"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.3",
    "@electric-sql/pglite": "^0.2.11",
    "@hono/auth-js": "^1.1.0",
    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.5.0",
    "ai": "^4.3.16",
    "better-auth": "^1.3.4",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "openai": "^5.12.2",
    "pg": "^8.14.1",
    "valibot": "^1.1.0",
    "zod": "^4.0.2"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11",
    "@drepkovsky/drizzle-migrations": "github:drepkovsky/drizzle-migrations"
  }
}
